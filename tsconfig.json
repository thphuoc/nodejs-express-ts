{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./node_modules/@loopback/build/config/tsconfig.common.json",
  "include": [
    "src",
    "test"
  ],
  "compilerOptions": {
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules/**",
    "packages/*/node_modules/**",
    "**/*.d.ts"
  ]
}
